####################################################################################################

feature_metrics_server_cli() {
    # gather required metrics
    gather_metrics_server

    # output
    printf "${OPERATING_SYSTEM} ${FREEBSD_VERSION} (${ARCHITECTURE})\n"
    printf "${HOSTNAME}"
}

feature_metrics_uptime_cli() {
    # gather required metrics
    gather_metrics_uptime

    # output
    if [ "${UPTIME_DAY}" -ge '1' ]; then
        if [ "${UPTIME_DAY}" -eq '1' ]; then
            printf "${UPTIME_DAY} day "
        else
            printf "${UPTIME_DAY} days "
        fi
        if [ "${UPTIME_HOUR}" -eq '1' ]; then
            printf "${UPTIME_HOUR} hour "
        else
            printf "${UPTIME_HOUR} hours "
        fi
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n"
        else
            printf "${UPTIME_SEC} seconds\n"
        fi
    elif [ "${UPTIME_HOUR}" -ge '1' ]; then
        if [ "${UPTIME_HOUR}" -eq '1' ]; then
            printf "${UPTIME_HOUR} hour "
        else
            printf "${UPTIME_HOUR} hours "
        fi
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n"
        else
            printf "${UPTIME_SEC} seconds\n"
        fi
    elif [ "${UPTIME_MIN}" -ge '1' ]; then
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n"
        else
            printf "${UPTIME_SEC} seconds\n"
        fi
    elif [ "${UPTIME_SEC}" -ge '1' ]; then
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n"
        else
            printf "${UPTIME_SEC} seconds\n"
        fi
    fi
}

feature_metrics_cpu_cli() {
    # gather required metrics
    gather_metrics_cpu

    # output
    printf "%-18s %-10s %-10s %-10s\n" "" "1 min" "5 min" "15 min"
    printf "%-18s %-10s %-10s %-10s\n" "load average:" "${CPU_LOAD_AVERAGE_1MIN} (${CPU_LOAD_PERCENTAGE_1MIN}%)" "${CPU_LOAD_AVERAGE_5MIN} (${CPU_LOAD_PERCENTAGE_5MIN}%)" "${CPU_LOAD_AVERAGE_15MIN} (${CPU_LOAD_PERCENTAGE_15MIN}%)"
}

feature_metrics_memory_cli() {
    # gather required metrics
    gather_metrics_memory

    # output
    printf "%-14s %12s %12s %12s\n" "" "total" "used" "free"
    printf "%-14s %12s %12s %12s\n" "Mem:" "${MEMORY_TOTAL_VIEW}" "${MEMORY_USED_VIEW}" "${MEMORY_FREE_VIEW}"
    printf "\n"
}

feature_metrics_memory2_cli() {
    # gather required metrics
    gather_metrics_memory

    # output
    printf "%-14s %10s %10s\n" "Total" "${MEMORY_TOTAL_VIEW}" "${MEMORY_TOTAL_PERCENTAGE}%"
    printf "%-14s %10s %10s" "|-- Free" "${MEMORY_FREE_VIEW}" "${MEMORY_FREE_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "|-- Used" "${MEMORY_USED_VIEW}" "${MEMORY_USED_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "|   |-- Active" "${MEMORY_ACTIVE_VIEW}" "${MEMORY_ACTIVE_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "|   \`-- Wired" "${MEMORY_WIRED_VIEW}" "${MEMORY_WIRED_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "|-- Inactive" "${MEMORY_INACTIVE_VIEW}" "${MEMORY_INACTIVE_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "|-- Laundry" "${MEMORY_LAUNDRY_VIEW}" "${MEMORY_LAUNDRY_PERCENTAGE}%"
    printf "\n"
    printf "%-14s %10s %10s" "\`-- Cache" "${MEMORY_CACHE_VIEW}" "${MEMORY_CACHE_PERCENTAGE}%"
    printf "\n"
}

feature_metrics_memory3_cli() {
    # gather required metrics
    gather_metrics_memory

    # variables
    DIVIDER_LENGTH='36'

    # output
    printf "%-14s %10s %10s\n" "MEMORY" "AMOUNT" "%.TOTAL"
    printf "=%.0s"  $(seq 1 ${DIVIDER_LENGTH})
    printf "\n"
    printf "%-14s %10s %10s\n" "Total" "${MEMORY_TOTAL_VIEW}" "${MEMORY_TOTAL_PERCENTAGE}%"
    printf "%-14s %10s %10s" "|-- Free" "${MEMORY_FREE_VIEW}" "${MEMORY_FREE_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_FREE_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_FREE_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "|-- Used" "${MEMORY_USED_VIEW}" "${MEMORY_USED_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_USED_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_USED_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "|   |-- Active" "${MEMORY_ACTIVE_VIEW}" "${MEMORY_ACTIVE_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_ACTIVE_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_ACTIVE_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "|   \`-- Wired" "${MEMORY_WIRED_VIEW}" "${MEMORY_WIRED_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_WIRED_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_WIRED_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "|-- Inactive" "${MEMORY_INACTIVE_VIEW}" "${MEMORY_INACTIVE_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_INACTIVE_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_INACTIVE_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "|-- Laundry" "${MEMORY_LAUNDRY_VIEW}" "${MEMORY_LAUNDRY_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_LAUNDRY_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_LAUNDRY_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
    printf "%-14s %10s %10s" "\`-- Cache" "${MEMORY_CACHE_VIEW}" "${MEMORY_CACHE_PERCENTAGE}%"
    printf "  ["
    printf "#%.0s"  $(seq 0 ${MEMORY_CACHE_PERCENTAGE_HALVED})
    printf " %.0s"  $(seq 0 ${MEMORY_CACHE_PERCENTAGE_HALVED_REMAINDER})
    printf "]\n"
}

feature_metrics_disk_cli() {
    # gather required metrics
    gather_metrics_disk

    # output
    printf "${ROOT_PARTITION_USED_VIEW} / ${ROOT_PARTITION_SIZE_VIEW} (${ROOT_PARTITION_USED_PERCENTAGE}%)\n"
}

feature_overview_basic_cli() {
    # gather required metrics
    gather_metrics_cpu
    gather_metrics_memory
    gather_metrics_disk

    # output
    printf "%-9s %9s %1s\n" "load" "${CPU_LOAD_AVERAGE_15MIN}" "(${CPU_LOAD_PERCENTAGE_15MIN}%)"
    printf "%-9s %9s %1s %7s %4s\n" "memory" "${MEMORY_USED_VIEW}" "/" "${MEMORY_TOTAL_VIEW}" "(${MEMORY_USED_PERCENTAGE}%)"
    printf "%-9s %9s %1s %7s %4s\n" "disk" "${ROOT_PARTITION_USED_VIEW}" "/" "${ROOT_PARTITION_SIZE_VIEW}" "(${ROOT_PARTITION_USED_PERCENTAGE}%)"
}

feature_overview_extended_cli() {
    # gather required metrics
    gather_metrics_server
    gather_metrics_uptime
    gather_metrics_cpu
    gather_metrics_memory
    gather_metrics_disk

    # output
    printf "hostname:      ${HOSTNAME}\n"
    printf "os/kernel:     ${OPERATING_SYSTEM} ${FREEBSD_VERSION} (${ARCHITECTURE})\n"
    printf "uptime:        "
    if [ "${UPTIME_DAY}" -ge '1' ]; then
        if [ "${UPTIME_DAY}" -eq '1' ]; then
            printf "${UPTIME_DAY} day "
        else
            printf "${UPTIME_DAY} days "
        fi
        if [ "${UPTIME_HOUR}" -eq '1' ]; then
            printf "${UPTIME_HOUR} hour "
        else
            printf "${UPTIME_HOUR} hours "
        fi
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n\n"
        else
            printf "${UPTIME_SEC} seconds\n\n"
        fi
    elif [ "${UPTIME_HOUR}" -ge '1' ]; then
        if [ "${UPTIME_HOUR}" -eq '1' ]; then
            printf "${UPTIME_HOUR} hour "
        else
            printf "${UPTIME_HOUR} hours "
        fi
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n\n"
        else
            printf "${UPTIME_SEC} seconds\n\n"
        fi
    elif [ "${UPTIME_MIN}" -ge '1' ]; then
        if [ "${UPTIME_MIN}" -eq '1' ]; then
            printf "${UPTIME_MIN} minute "
        else
            printf "${UPTIME_MIN} minutes "
        fi
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n\n"
        else
            printf "${UPTIME_SEC} seconds\n\n"
        fi
    elif [ "${UPTIME_SEC}" -ge '1' ]; then
        if [ "${UPTIME_SEC}" -eq '1' ]; then
            printf "${UPTIME_SEC} second\n\n"
        else
            printf "${UPTIME_SEC} seconds\n\n"
        fi
    fi
    printf "%-14s %-10s %-10s %-10s\n" "cpu load:" "1 min" "5 min" "15 min"
    printf "%-14s %-10s %-10s %-10s\n" "" "${CPU_LOAD_AVERAGE_1MIN} (${CPU_LOAD_PERCENTAGE_1MIN}%)" "${CPU_LOAD_AVERAGE_5MIN} (${CPU_LOAD_PERCENTAGE_5MIN}%)" "${CPU_LOAD_AVERAGE_15MIN} (${CPU_LOAD_PERCENTAGE_15MIN}%)"
    printf "\n"
    printf "%-14s %-10s %-10s %-10s\n" "memory:" "total" "used" "free"
    printf "%-14s %-10s %-10s %-10s\n" "" "${MEMORY_TOTAL_VIEW}" "${MEMORY_USED_VIEW}" "${MEMORY_FREE_VIEW}"
    printf "\n"
    printf "%-14s %-10s %-10s %-10s\n" "disk usage:" "total" "used" "free"
    printf "%-14s %-10s %-10s %-10s\n" "" "${ROOT_PARTITION_SIZE_VIEW}" "${ROOT_PARTITION_USED_VIEW} (${ROOT_PARTITION_USED_PERCENTAGE}%)" "WIP (WIP%)"
}
